                                            var genres = Model.MovieGenres.Where(mg => movie.Id ==
                                            mg.MovieId).OrderBy(x => x.Genre.Name).ToList();
                                            var genreNames = string.Empty;
                                            for (int i = 0; i < genres.Count; i++)
                                            {
                                                genreNames += genres[i].Genre.Name;
                                                if (i < genres.Count - 1)
                                                {
