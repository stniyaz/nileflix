<body>
    <!-- sign in -->
    <div class="sign section--full-bg" data-bg="img/bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="sign__content">
                        <!-- authorization form -->
                        <form method="post" class="sign__form">
                            <a asp-action="index" asp-controller="home" class="sign__logo">
                                <img src="~/assets/img/logo.svg" alt="">
                            </a>

                            <div class="sign__group">
                                <input asp-for="Email" type="email" class="sign__input" placeholder="Email">
                                <span asp-validation-for="Email" style="color:darkred"></span>
                                @if (Model?.IsSent == true)
                                {
                                    <span style="color:gray" class="sign__text">*We will send a password to your Email</span>
                                }
                            </div>
                            <button class="sign__btn" type="submit">Send</button>

                        </form>
                        <!-- end authorization form -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end sign in -->
    <!-- JS -->
    <script href="~/assets/js/jquery-3.5.1.min.js"></script>
    <script href="~/assets/js/bootstrap.bundle.min.js"></script>
